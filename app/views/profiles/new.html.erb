<%= simple_form_for(@profile) do |f| %>
        <%= f.input :first_name, required: true %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :dob %>

        <%= f.input :language_ids, collection: Language.all.pluck(:name, :id), as: :check_boxes, label: "Languages you speak", item_wrapper_class: "d-inline-block me-3 mb-2" %>
        <%= f.submit %>
      <% end %>
