<%= simple_form_for(@profile) do |f| %>
        <%= f.input :first_name, required: true %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :dob %>
        <%= f.input :language, collection: ["English", "French", "German", "Portuguese", "Spanish", "Turkish", "Italian", "Klingon", "Greek"] %>
        <%= f.submit %>
      <% end %>
