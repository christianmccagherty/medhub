<div class="clinic-show-banner">
  <% if @clinic.photo.attached? %>
    <%= cl_image_tag @clinic.photo.key, transformation: [
              { gravity: "auto", crop: "auto" }
            ] %>
  <% end %>
</div>

<div class="clinic-card-container">
  <div class="clinic-card-flex">

    <div class="clinic-card-info">
      <h1><%= @clinic.name %></h1>
      <h3><i class="fa-solid fa-location-dot"></i> <%= @clinic.address %></h3>
      <h3>Something here about specialty</h3>
      <h3>Fortis Fortuna Adiuvat</h3>
      <h3>Something here about specialty</h3>
      <% unless @clinic.average_clinic_rating == "unrated" %>
        <p class="text-muted">Patient satisfaction - <%= @clinic.average_clinic_rating %>/5 </p>
      <% end %>
    </div>
  </div>

  <div class="clinic-card-extras">
    <div class="clinic-card-socials">
      <i class="fa-brands fa-facebook"></i>
      <i class="fa-brands fa-instagram"></i>
      <i class="fa-brands fa-linkedin"></i>
      <i class="fab fa-twitter"></i>
      <i class="fab fa-github"></i>
    </div>
    <div class="clinic-card-image"></div>
  </div>

</div>
