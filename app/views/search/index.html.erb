<h1>Search Results</h1>

<% if @results.any? %>
  <ul>
    <% @results.each do |result| %>
      <li>
        <% if result.is_a?(Clinic) %>
          <strong>Clinic:</strong> <%= result.name %> â€” <%= result.address %>
        <% elsif result.is_a?(Doctor) %>
          <strong>Doctor:</strong> <%= result.user.profile.first_name %> <%= result.user.profile.last_name %>
          | <strong>Specialty:</strong> <%= result.speciality %>
          | <strong>Clinic:</strong> <%= result.clinic.name if result.clinic.present? %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No results found for "<%= params[:query] %>".</p>
<% end %>
